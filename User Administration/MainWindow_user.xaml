<Window x:Class="YourNamespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main Window" Height="350" Width="525">
    <Grid>
        <ListBox x:Name="UsersListBox" SelectionChanged="UsersListBox_SelectionChanged" Margin="10"/>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Width="200" Margin="10">
            <TextBox x:Name="UserNameTextBox" PlaceholderText="Username" Margin="10"/>
            <PasswordBox x:Name="UserPassBox" PlaceholderText="Password" Margin="10"/>
            <CheckBox x:Name="IsAdminCheckBox" Content="Is Admin" Margin="10"/>
            <Button Content="Save" Click="SaveButton_Click" Margin="10"/>
            <Button Content="Add New User" Click="AddButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
