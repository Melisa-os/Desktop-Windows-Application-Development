<Window x:Class="YourNamespace.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="200" Width="300">
    <Grid>
        <StackPanel>
            <TextBox x:Name="UserNameTextBox" PlaceholderText="Username" Margin="10"/>
            <PasswordBox x:Name="UserPassBox" PlaceholderText="Password" Margin="10"/>
            <Button Content="Login" Click="LoginButton_Click" Margin="10"/>
            <TextBlock x:Name="MessageTextBlock" Foreground="Red" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>

